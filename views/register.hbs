<div class="auth-outer">
  <div class="auth-frame">
    <!-- IZQUIERDA -->
    <section class="auth-left">
      <div class="auth-brand">
        <span class="brand-mark"></span>
        <span class="brand-name">KanbanPro</span>
      </div>

      <div class="mt-4">
        <p class="auth-kicker mb-2">Comienza tu experiencia</p>
        <h1 class="auth-title mb-4">Crear cuenta en KanbanPro</h1>

        <form>
          <div class="mb-3">
            <label class="form-label auth-label">Correo electrónico</label>
            <div class="auth-input">
              <input
                class="form-control auth-control"
                type="email"
                placeholder="ejemplo@email.com"
              />

              <i class="bi bi-envelope auth-icon"></i>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label auth-label">Contraseña</label>
            <div class="auth-input">
              <input
                class="form-control auth-control"
                type="password"
                placeholder="••••••••"
              />
              <i class="bi bi-eye auth-icon"></i>
            </div>
          </div>

          <!-- Simulación -->
          <a class="btn auth-btn w-100" href="/dashboard">Registrarse</a>

          <div class="auth-divider my-4">
            <span>Registrarse con</span>
          </div>

          <div class="auth-social">
            <button
              class="btn auth-social-btn"
              type="button"
              disabled
              aria-label="Facebook"
            >
              <i class="bi bi-facebook"></i>
            </button>
            <button
              class="btn auth-social-btn"
              type="button"
              disabled
              aria-label="Google"
            >
              <i class="bi bi-google"></i>
            </button>
            <button
              class="btn auth-social-btn"
              type="button"
              disabled
              aria-label="Apple"
            >
              <i class="bi bi-apple"></i>
            </button>
          </div>

          <p class="auth-foot mt-4 mb-0">
            ¿Ya tienes una cuenta?
            <a class="auth-link" href="/login">Iniciar sesión</a>
          </p>
        </form>
      </div>
    </section>

    <!-- DERECHA -->
    <aside class="auth-right" aria-hidden="true"></aside>
  </div>
</div>